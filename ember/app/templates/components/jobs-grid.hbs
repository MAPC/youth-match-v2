<div class="component jobs-grid">

  <ul>
    {{#each model as |position|}}
      <li class="job-box">
        {{#link-to 'dashboard.youth.jobs.job' position.id}}
          <h6>{{position.category}}</h6>

          <div class="job-description">
            <h4>{{position.site_name}}</h4>
            <h5>{{capitalize (pure-title position.title)}}</h5>

            <p>
              {{truncate-text position.duties_responsbilities limit=100}}
            </p>
          </div>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>

</div>
