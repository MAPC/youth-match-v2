<section class="route youth-index">

  <div class="status-message">
    Hi, {{capitalize model.applicant.first_name}}!<br/>
    {{stepMessage}}
  </div>

  {{#if (eq step '3')}}
    <article class="step-3">
      <h4>YOUR OFFER</h4>
    </article>
  {{/if}}

  <article class="timeline-wrapper">
    <h4>YOUR STATUS</h4>

    <div class="timeline {{stepClass}}">
      {{#each-in steps as |num _step|}}
        <div class="checkpoint">
          <div class="checkpoint-number"> 
            <span class="{{if (eq num step) 'large'}} {{if (gt num step) 'inactive'}}">{{num}}</span>
          </div>
          <div class="checkpoint-info">
            <h5>STEP {{num}}</h5>
            {{_step.title}}
          </div>
        </div>
      {{/each-in}}
    </div>
  </article>

  <article class="questions">
    <h4>QUESTIONS?</h4>
  </article>

</section>
