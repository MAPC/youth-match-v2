<section class="route youth-index">

  <div class="status-message">
    Hi, {{capitalize model.applicant.first_name}}!<br/>
    {{stepMessage}}
  </div>

  {{#if (eq step '2')}}
    <article class="step-2">
      <h4>HOW TO FIND THE RIGHT JOB</h4>

      <p>
        You can visit the {{link-to 'jobs' 'dashboard.youth.jobs'}} page 
        and select up to a maximum of {{model.applicant.maxPositionsAllowed}} jobs to 
        add to your job list. Once you have selected a few jobs, all you have to do 
        is wait for an employer to send an email to you at <em>{{applicantEmail}}</em> 
        to notify you of an offer.
      </p>
    </article>
  {{/if}}

  {{#if (eq step '3')}}
    <article class="step-3">
      <p>
        Please check your email to accept or decline your job offer!
      </p>
    </article>
  {{/if}}

  {{#if (eq step '4')}}
    <article class="step-4">
      <p>
        You have {{acceptedOrDeclined}} the job you have been offered.
      </p>
    </article>
  {{/if}}

  {{#if (eq step '5')}}
    <article class='step-5'>
      <p>
        You have completed the job selection process! Please login to your 
        <a href=https://successlink-boston.icims.com/jobs/login"">YEE</a> account to proceed.
      </p>
    </article>
  {{/if}}

  <article class="timeline-wrapper">
    <h4>YOUR STATUS</h4>

    <div class="timeline {{stepClass}}">
      {{#each-in steps as |num _step|}}
        <div class="checkpoint">
          <div class="checkpoint-number"> 
            <span class="{{if (eq num step) 'large'}} {{if (gt num step) 'inactive'}}">{{num}}</span>
          </div>
          <div class="checkpoint-info">
            <h5>STEP {{num}}</h5>
            {{_step.title}}
          </div>
        </div>
      {{/each-in}}
    </div>
  </article>

  <article class="questions">
    <h4>QUESTIONS?</h4>
  </article>

</section>
